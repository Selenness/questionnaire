  $('.answers')
      .append('<%= j render @answer %>')
      .find('.attachments a:contains("Delete")')
      .unbind('click')
      .click(delete_attachment);
  make_votable($('.answers').find("#span_answer_#{@answer.id}").find('.voting_button'));
<% end %>

